{
    "name": "logical-properties-everywhere",
    "version": "1.0.0",
    "description": "Collection of utilities to work around features that are not compatible with logical properties (such as translateX, translateY or getBoundingClientRect).",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "typings": "./dist/index.d.ts",
    "module": "./dist/index.mjs",
    "homepage": "https://github.com/DerZade/logical-properties-everywhere#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/DerZade/logical-properties-everywhere.git"
    },
    "files": [
        "dist"
    ],
    "bugs": {
        "url": "https://github.com/DerZade/logical-properties-everywhere/issues",
        "email": "derzade@gmail.com"
    },
    "scripts": {
        "build": "tsup --tsconfig ./tsconfig.json --dts --minify --format cjs,esm ./src/index.ts",
        "lint": "eslint --ext .js,.ts ./src",
        "fmt": "prettier --write ."
    },
    "keywords": [
        "utilities",
        "logical",
        "property",
        "properties",
        "inline",
        "block",
        "ltr",
        "rtl"
    ],
    "author": "Jonas Schade <derzade@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.5",
        "tsup": "^6.7.0",
        "typescript": "^5.0.2"
    }
}
